#!/bin/bash

# Define root directory
MONIFLUX_ROOT="MoniFlux"

# Create root project directory
mkdir -p $MONIFLUX_ROOT

# Backend directories (Go service for load generation, API, etc.)
mkdir -p $MONIFLUX_ROOT/backend
mkdir -p $MONIFLUX_ROOT/backend/api
mkdir -p $MONIFLUX_ROOT/backend/load-generator
mkdir -p $MONIFLUX_ROOT/backend/logs
mkdir -p $MONIFLUX_ROOT/backend/config
mkdir -p $MONIFLUX_ROOT/backend/tests

# Frontend directories (UI for controlling the load and monitoring)
mkdir -p $MONIFLUX_ROOT/frontend
mkdir -p $MONIFLUX_ROOT/frontend/src
mkdir -p $MONIFLUX_ROOT/frontend/public
mkdir -p $MONIFLUX_ROOT/frontend/assets
mkdir -p $MONIFLUX_ROOT/frontend/components
mkdir -p $MONIFLUX_ROOT/frontend/utils
mkdir -p $MONIFLUX_ROOT/frontend/config

# Kubernetes directories
mkdir -p $MONIFLUX_ROOT/kubernetes
mkdir -p $MONIFLUX_ROOT/kubernetes/deployments
mkdir -p $MONIFLUX_ROOT/kubernetes/services
mkdir -p $MONIFLUX_ROOT/kubernetes/configmaps
mkdir -p $MONIFLUX_ROOT/kubernetes/volumes

# Helm chart directories
mkdir -p $MONIFLUX_ROOT/helm
mkdir -p $MONIFLUX_ROOT/helm/charts
mkdir -p $MONIFLUX_ROOT/helm/templates
mkdir -p $MONIFLUX_ROOT/helm/values

# Scripts (deployment and management scripts)
mkdir -p $MONIFLUX_ROOT/scripts
mkdir -p $MONIFLUX_ROOT/scripts/deploy
mkdir -p $MONIFLUX_ROOT/scripts/monitoring
mkdir -p $MONIFLUX_ROOT/scripts/logging

# CI/CD directories (for CircleCI, Jenkins, etc.)
mkdir -p $MONIFLUX_ROOT/ci
mkdir -p $MONIFLUX_ROOT/ci/circleci
mkdir -p $MONIFLUX_ROOT/ci/jenkins

# Documentation directories
mkdir -p $MONIFLUX_ROOT/docs
mkdir -p $MONIFLUX_ROOT/docs/api
mkdir -p $MONIFLUX_ROOT/docs/frontend
mkdir -p $MONIFLUX_ROOT/docs/backend

# Test directories
mkdir -p $MONIFLUX_ROOT/tests
mkdir -p $MONIFLUX_ROOT/tests/unit
mkdir -p $MONIFLUX_ROOT/tests/integration

# Miscellaneous configurations (e.g., environment variables)
mkdir -p $MONIFLUX_ROOT/config
touch $MONIFLUX_ROOT/config/.env

# Create README and main.go for backend
echo "# MoniFlux" > $MONIFLUX_ROOT/README.md
echo "package main

import (
    \"fmt\"
)

func main() {
    fmt.Println(\"Welcome to MoniFlux!\")
}" > $MONIFLUX_ROOT/backend/main.go

echo "Directory structure for MoniFlux is created successfully!"
